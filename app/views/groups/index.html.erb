<% @group.each do |group| %>

    <div style="display:flex; flex-direction:row">
    

    <%= link_to group.name, user_group_path(current_user,group) %>
    
     <p style="margin-left:20px">
     <% if group.id != 1 %>
      
     <% x=group.users.where(id: current_user.id)%>
     
    
   
     <% if current_user != x[0]%>

       <%  if group.grouptype=='Public' %> 

       <%= link_to "Join this group", user_group_join_path(group_id: group.id) %>
       <% elsif group.grouptype=='Private' %>
         <%= link_to "Join this private group", user_group_joingroup_path(group_id: group.id) %>
       <% end %>
    


        <% else %>
        You have already joined this group

       
       <% end %>  </p>

    

     <% end %>
     
     
    
    
    <p style="margin-left:20px"> <%= group.name %>   </p>
     <p style="margin-left:20px"> <%= group.grouptype %>   </p>
    <p style="margin-left:20px"> <%= group.user.user_name %>   </p>
    
    
    </div>
    
    
    
    
<% end %>
