<div class='row'>
  <div class='col-md-12'>
 <%= form_for( [@group], :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class='form-group'>
       <div class= 'control-label col-sm-2'>
        <%= f.label :name %> 
       </div>
       <div class= 'col-sm-8'>
        <%= f.text_field :name, class:'form-control' ,placeholder:"Title of Article" ,autofocus:true %>
       </div>
    </div>
     <div class='form-group'>
         <div class= 'control-label col-sm-2'>
         <%= f.label :grouptype %> 
         </div>
      <div class= 'col-sm-8'>
      <%= f.text_area :grouptype ,rows:10, class:'form-control' ,placeholder:"Body of Article"  %>
      </div> 
      
   

    </div>

    <div class='form-group'>
      <div class="col-sm-offset-2 col-sm-2">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
     </div>
    </div>
    

<% end %>